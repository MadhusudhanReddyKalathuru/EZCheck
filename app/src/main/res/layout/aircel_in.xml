<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/Fuchsia">
        <ImageView
            android:id="@+id/aircel_title"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <EditText
                android:id="@+id/aircel_edittext"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/aircel_balence"
                android:layout_alignStart="@+id/aircel_balence"
                android:layout_marginTop="120dp"
                android:ems="10"
                android:textColor="@color/BlueViolet"
                android:hint="Enter Recharge Code"
                android:inputType="number" />

            <Button
                android:id="@+id/aircel_recharge_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/aircel_balence"
                android:layout_alignEnd="@+id/aircel_balence"
                android:layout_alignRight="@+id/aircel_balence"
                android:background="@color/Fuchsia"
                android:text="Recharge"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/aircel_balence"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aircel_edittext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:background="@color/Fuchsia"
                android:text="Check Your Prepaid Balence" />

            <Button
                android:id="@+id/aircel_loan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/aircel_balence"
                android:layout_alignStart="@+id/aircel_balence"
                android:layout_below="@+id/aircel_balence"
                android:layout_marginTop="10dp"
                android:background="@color/Fuchsia"
                android:text="Take Loan" />

            <Button
                android:id="@+id/aircel_checkmobilenumber"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/aircel_loan"
                android:layout_alignStart="@+id/aircel_loan"
                android:layout_below="@+id/aircel_loan"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Check Your Mobile Number" />

            <Button
                android:id="@+id/aircel_customercare"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/aircel_checkmobilenumber"
                android:layout_alignStart="@+id/aircel_checkmobilenumber"
                android:layout_below="@+id/aircel_checkmobilenumber"
                android:layout_marginTop="10dp"
                android:background="@color/Fuchsia"
                android:text="Call To Customer Care " />

            <Button
                android:id="@+id/aircel_mailcare"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aircel_customercare"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Mail To Customer Care" />

            <Button
                android:id="@+id/aircel_share"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aircel_mailcare"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Share Your Balence To Your Friends" />
            <Button
                android:id="@+id/aircel_money"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aircel_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Aircel Money"/>
            <Button
                android:id="@+id/aircel_check_data_balence"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aircel_money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Check Your Data Balence"
                />
            <Button
                android:id="@+id/aircel_sms_balence"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aircel_check_data_balence"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="Check Your SMS Balence"
                />
            <Button
                android:id="@+id/aircel_valueaddedservices"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aircel_sms_balence"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@color/Fuchsia"
                android:text="CheValue Added Services"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

